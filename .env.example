# Configuración de OpenAI
OPENAI_API_KEY=your-api-key-here
OPENAI_PROMPT_MODEL=gpt-4  # o gpt-3.5-turbo para menor costo
OPENAI_FT_MODEL=gpt-3.5-turbo  # modelo para fine-tuning si se usa

# Configuración de OCR
TESSERACT_PATH=/usr/bin/tesseract  # ruta a tesseract en el contenedor
OCR_LANGUAGES=spa,eng  # idiomas soportados para OCR

# Configuración de logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
