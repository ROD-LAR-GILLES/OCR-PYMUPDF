[flake8]
max-line-length = 88
extend-ignore = E203
max-complexity = 10
per-file-ignores =
    __init__.py:F401
    tests/*:S101,S106
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    venv,
    .venv
docstring-convention = google
require-code = True
count = True
statistics = True
show-source = True