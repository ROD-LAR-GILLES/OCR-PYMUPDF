# Configuración de la API
API_HOST=0.0.0.0
API_PORT=8000

# Configuración de la interfaz web
WEB_HOST=127.0.0.1
WEB_PORT=8080

# Configuración de OpenAI (REQUERIDO para refinamiento LLM)
OPENAI_API_KEY=tu_clave_de_api_aqui
OPENAI_ORGANIZATION_ID=tu_id_de_organizacion_opcional
OPENAI_MODEL=gpt-4
OPENAI_MAX_RETRIES=3

# Configuración de Google Gemini (alternativa a OpenAI)
GEMINI_API_KEY=tu_clave_de_gemini_aqui
GEMINI_MODEL=gemini-pro
GEMINI_MAX_RETRIES=3

# Configuración de DeepSeek (alternativa a OpenAI)
DEEPSEEK_API_KEY=tu_clave_de_deepseek_aqui
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_RETRIES=3

# Configuración de Anthropic (alternativa a OpenAI)
ANTHROPIC_API_KEY=tu_clave_de_anthropic_aqui
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_RETRIES=3

# Configuración de OCR
OCR_DPI=300
OCR_LANGUAGE=spa
OCR_LOG_LEVEL=INFO

# Directorios de datos
DATA_DIR=tools/data
CORRECTIONS_FILE=corrections/corrections.csv
WORDS_FILE=dictionaries/legal_words.txt
PATTERNS_FILE=dictionaries/legal_patterns.txt

# ────────────────────────────────────────────────────────────────────────────────────────────
# INSTRUCCIONES
# ────────────────────────────────────────────────────────────────────────────────────────────
# 1. Copia este archivo a .env en el mismo directorio
# 2. Añade tu clave de API de OpenAI, Gemini, DeepSeek o Anthropic
#    Para el refinamiento LLM se requiere al menos una de estas claves
# 3. Si no tienes ninguna clave, el sistema funcionará en modo OCR básico sin refinamiento LLM
# 4. Al ejecutar con Docker, este archivo se monta automáticamente en el contenedor
#    También puedes pasar las variables directamente en docker-compose.yml
# ────────────────────────────────────────────────────────────────────────────────────────────
